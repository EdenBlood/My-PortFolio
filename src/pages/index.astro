---
import MainContainer from '../components/MainContainer.astro';
import MainCard from '../components/MainCard.astro';
import Layout from '../layouts/Layout.astro';


---

<Layout>
	<div 
		class="flex flex-col lg:flex-row w-full min-h-screen gap-18 animate-fade-in-down"
	> 

		<main 
			class="flex flex-col md:flex-row lg:flex-col flex-nowrap justify-between items-center h-[95vh] md:h-[90vh] top-[2.5vh] md:top-[5vh] relative lg:sticky bg-gray-card py-8 md:py-12 lg:py-8 md:px-12 lg:px-0 rounded-2xl w-full lg:w-1/3 2xl:w-2/5 self-start md:gap-6 lg:gap-0"
		>
			<MainCard />
		</main>

    <div class="w-full lg:w-2/3 2xl:w-3/5 py-[2.5vh] md:py-[5vh] overflow-hidden">
			<MainContainer />
		</div>

  </div>
</Layout>
