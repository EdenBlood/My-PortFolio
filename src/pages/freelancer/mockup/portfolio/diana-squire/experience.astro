---
import Layout from '@/layouts/mockups/portfolio/diana-squire/LayoutPortfolio.astro'
import Title from '@/components/mockups/freelancer/diana-squire/ui/Title.astro'
import { experiences } from '@/data/mockups/portfolio/diana-squire/index.ts'
import ExperienceCard from '@/components/mockups/ExperienceCard.astro'
---

<Layout title="Experiencia de Diana Squire">
  <div class="bg-gradient-to-br from-c-gradient-1 to-c-gradient-2">
    <div class="max-w-6xl mx-auto px-4 lg:px-0 pt-30">
      <Title>Experiencia <span class="sr-only">de Diana Squire</span></Title>
      <div class="py-10 mt-10 space-y-20">
        {
          experiences.map((experience) => (
            <ExperienceCard experience={experience} />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
