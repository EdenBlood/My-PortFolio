---
import ContactButton from './ContactButton.astro'
import LinkedIn from './Icons/LinkedIn.astro'
import GitHub from './Icons/GitHub.astro'
import Curriculum from './Icons/Curriculum.astro'
import DisplayTag from './DisplayTag'

interface MainCardProps {
  url: string
}

const { url } = Astro.props as MainCardProps
---

<header
  class="mx-12 md:mx-0 lg:mx-12 md:w-2/3 lg:w-auto rounded-xl h-full overflow-hidden"
>
  <img
    class="object-cover rounded-xl"
    src="/perfil.webp"
    alt="Foto de Franco Montechiani"
  />
</header>

<div
  class="md:w-1/3 lg:w-auto w-full h-full flex flex-col justify-between md:justify-evenly lg:justify-between text-center gap-4"
>
  <h1 class="text-3xl 2xl:text-6xl font-extrabold 2xl:font-bold">
    Franco Montechiani
  </h1>
  <div class="font-extralight text-md 2xl:text-3xl space-y-1">
    <h2>Desarrollador Web FullStack</h2>
    <p>Rosario, <span class="text-sky-200">Argentina</span></p>
  </div>

  <nav class="flex items-center justify-center gap-4">
    <a
      class="relative group p-1.5 rounded-full bg-white hover:scale-125 transition-transform duration-300"
      href="https://www.linkedin.com/in/franco-montechiani-a4b343354/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <LinkedIn class="size-6 2xl:size-12" />
      <DisplayTag
        client:load
        text="Mi LinkedIn"
        ubication="left-1/2 -translate-x-1/2 -top-7"
      />
    </a>

    <a
      class="relative group p-1.5 rounded-full bg-gray-950 hover:scale-125 transition-transform duration-300"
      href="https://github.com/EdenBlood"
      target="_blank"
      rel="noopener noreferrer"
    >
      <GitHub class="size-6 2xl:size-12" />
      <DisplayTag
        client:load
        text="Mi GitHub"
        ubication="left-1/2 -translate-x-1/2 -top-7"
      />
    </a>

    <a
      class="relative group p-1.5 rounded-full bg-blue-900 hover:scale-125 transition-transform duration-300"
      href="#"
    >
      <Curriculum class="size-6 2xl:size-12" />
      <DisplayTag
        client:load
        text="Mi Curriculum"
        ubication="left-1/2 -translate-x-1/2 -top-7"
      />
    </a>
  </nav>

  <ContactButton url={url} class="w-full md:mx-auto md:w-max px-12 md:px-0" />
</div>
