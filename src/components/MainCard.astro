---
import ContactButton from "./ContactButton.astro";
import LinkedIn from "./Icons/LinkedIn.astro";
import GitHub from "./Icons/GitHub.astro";
import Curriculum from "./Icons/Curriculum.astro";
import DisplayTag from "./DisplayTag";
---

<div class="px-12 md:px-0 lg:px-12 md:w-2/3 lg:w-auto h-full overflow-hidden">
  <img class="rounded-xl" src="/perfil.webp" alt="Foto de Franco Montechiani" />
</div>

<div
  class="md:w-1/3 lg:w-auto w-full h-full flex flex-col justify-between md:justify-evenly lg:justify-between text-center"
>
  <h1 class="text-[1.75rem] font-extrabold">Franco Montechiani</h1>
  <div class="font-extralight text-md">
    <h2>Desarrollador Web FullStack</h2>
    <p>Rosario, Argentina</p>
  </div>
  <div class="flex items-center justify-center gap-4">
    <a
      class="relative group p-1.5 rounded-full bg-white hover:scale-125 transition-transform duration-300"
      href="https://www.linkedin.com/in/franco-montechiani-a4b343354/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <LinkedIn class="size-6" />
      <DisplayTag text="Mi LinkedIn" ubication="-top-7 -left-1/2" />
    </a>

    <a
      class="relative group p-1.5 rounded-full bg-gray-950 hover:scale-125 transition-transform duration-300"
      href="https://github.com/EdenBlood"
      target="_blank"
      rel="noopener noreferrer"
    >
      <GitHub class="size-6" />
      <DisplayTag text="Mi GitHub" ubication="-top-7 -left-1/2" />
    </a>

    <a
      class="relative group p-1.5 rounded-full bg-blue-900 hover:scale-125 transition-transform duration-300"
      href="#"
    >
      <Curriculum class="size-6" />
      <DisplayTag text="Mi Curriculum" ubication="-top-7 -left-1/2" />
    </a>
  </div>

  <ContactButton class="w-full md:mx-auto md:w-max px-12 md:px-0" />
</div>
