---
import type { Experience } from '@/data/mockups/portfolio/diana-squire'
import Picture from 'astro/components/Picture.astro'

interface Props {
  experience: Experience
}

const { experience } = Astro.props
const { pathname } = Astro.url
---

<div class="py-10 flex flex-col gap-6">
  <Picture
    src={experience.img}
    alt={experience.title}
    inferSize
    class="w-full h-80 object-cover object-center rounded-xl"
  />

  <div class="space-y-2">
    <h2 class="text-5xl text-c-aquagreen-400 font-dm-serif">
      <strong>{experience.title}</strong>
    </h2>

    <div class="flex gap-4 items-center text-slate-200 text-xl">
      <p class="text-orange-300">En {experience.company}</p>
      <p class="text-sm text-orange-300">{experience.date}</p>
    </div>
  </div>

  <div class="space-y-4" set:html={experience.descriptionHTML} />

  <div class="space-y-4">
    <h3 class="text-3xl text-c-aquagreen-400 font-dm-serif">
      <strong>Aprendizajes</strong>
    </h3>
    <ul class="list-disc list-inside space-y-1">
      {
        experience.learnings.map((learning) => (
          <li class="text-slate-200 text-sm">{learning}</li>
        ))
      }
    </ul>
  </div>

  <div class="space-y-4">
    <h3 class="text-3xl text-c-aquagreen-400 font-dm-serif">
      <strong>Habilidades que Desarrolle</strong>
    </h3>
    <ul class="list-disc list-inside space-y-1">
      {
        experience.skills.map((skill) => (
          <li class="text-slate-200 text-sm">{skill}</li>
        ))
      }
    </ul>
  </div>

  <a
    class="bg-c-aquagreen-600 text-slate-100 text-lg px-6 py-2 w-fit rounded-full font-bold hover:bg-c-aquagreen-500 hover:text-slate-100 transition-all duration-300 hover:shadow-lg"
    href={pathname.split('/').slice(0, -1).join('/')}
  >
    Volver a Experiencias
  </a>
</div>
