<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const parent = entry.target
            parent.classList.add('reveal-show')
            parent.classList.remove('reveal-hidden')

            const children = parent.querySelectorAll('.reveal-child')
            children.forEach((child) => {
              child.classList.add('reveal-show')
              child.classList.remove('reveal-hidden')
            })
            obs.unobserve(parent)
          }
        })
      },
      {
        threshold: 0.25
      }
    )

    const elements = document.querySelectorAll('.reveal')
    elements.forEach((element) => {
      element.classList.add(
        'reveal-hidden',
        'transition-all',
        'duration-1000',
        'ease-out'
      )

      const children = element.querySelectorAll('.reveal-child')
      children.forEach((child) => {
        child.classList.add(
          'reveal-hidden',
          'transition-all',
          'duration-1000',
          'ease-out'
        )
      })

      observer.observe(element)
    })
  })
</script>
